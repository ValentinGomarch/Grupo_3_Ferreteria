<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs")%>
  <link rel="stylesheet" href="/css/productList.ejs">
  <body>
    <%- include("../partials/header.ejs")%>

    <main>
        <section class="ultima-visita">
            <h4 class="titulo-entre-productos">Todos los productos</h4>
            <div class="productos-List">
              <% for (let i = 0; i < products.length; i++) {%> <!--  /* cambiÃ© i = 0 por i = 5*/ -->
              <article class="article-producto-login">
                <img
                  class="picture"
                  src="/img/products/<%= products[i].image %>"
                  alt="<%= products[i].alt %>"
                  width="100"
                  height="100"
                />
                <div class="articulos-vistos">
                  <p class="precio-Antes"><%= products[i].price %>$</p>
                  <i class="fas fa-truck"></i>
                  <h5 class="descripcion">
                    <a href="/producto/<%= products[i].id %>/detalle"><%= products[i].name %></a>
                  </h5>
                </div>
              </article>
              <%}%>
          </section>
    </main>

    <%- include("../partials/footer.ejs")%>
  </body>
</html>
